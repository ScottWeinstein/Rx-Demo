<Window x:Class="UnitTestingUICode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <UniformGrid x:Name="KeyPadGrid" Grid.Row="0">
        </UniformGrid>

        <StackPanel Grid.Row="1">
            <TextBox Text="{Binding EnteredPassKey}"/>
            <CheckBox IsChecked="{Binding IsCorrectPassKey}"/>
        </StackPanel>
        
    </Grid>
</Window>
